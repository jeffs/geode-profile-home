[alias]
	br     = branch
	ci     = commit
	co     = checkout
	di     = diff
	st     = status
	flog   = log --first-parent --oneline
	spliff = difftool -y
	root = rev-parse --show-toplevel
	exec = "!exec "
[color]
	ui = true
[core]
	excludesfile = ~/conf/etc/gitexcludes
[diff]
	# https://github.blog/2016-06-13-git-2-9-has-been-released/#beautiful-diffs
	compactionHeuristic = true
[grep]
	extendRegexp = true
[pull]
	ff = only
[push]
	default = simple
